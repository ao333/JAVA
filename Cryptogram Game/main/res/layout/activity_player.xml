<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.sdpcryptogram.Player"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/CryptogramListText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cryptogram List"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ListView
        android:id="@+id/CryptogramListList"
        android:layout_width="368dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/CryptogramText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Cryptogram"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CryptogramListText"
        android:layout_marginTop="126dp" />

    <EditText
        android:id="@+id/CryptogramEditText"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="143dp"
        android:ems="10"
        android:hint="Cryptogram Here"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/CryptogramListText" />

    <TextView
        android:id="@+id/InputText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="182dp" />

    <EditText
        android:id="@+id/YourSolutionText"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:hint="Your Solution Here"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ImpliedSubsitutionCipherText2"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="286dp"
        android:ems="10"
        android:hint="Implied Subsitution Cipher"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="329dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/ViewPlayerRatingsText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="View Player Ratings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="384dp" />

    <ListView
        android:id="@+id/PlayerRatingsList"
        android:layout_width="368dp"
        android:layout_height="111dp"
        android:layout_marginTop="401dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
